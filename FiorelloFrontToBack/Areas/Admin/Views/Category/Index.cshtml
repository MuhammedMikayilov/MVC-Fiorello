@model List<Categories>
@{
    ViewData["Title"] = "Category";
}

<div class="col-lg-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline-block">Categories</h4>
            <a asp-controller="Category" asp-action="Create" class="btn btn-success ml-4">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Category name
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Categories item in Model)
                        {
                            <tr class="table-info">

                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    <a asp-controller="Category" asp-action="Details" asp-route-id="@item.Id" class="btn btn-success" width="20"><i class="mdi mdi-information-variant"></i> Info</a>
                                    <a asp-controller="Category" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"><i class="mdi mdi-grease-pencil"></i> Edit</a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever"></i> Delete</a>
                                </td>
                            </tr>
                         }
                        </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


